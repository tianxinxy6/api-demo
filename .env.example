# ==================================
# 应用基础配置
# ==================================
NODE_ENV=development
PORT=3000
APP_NAME=chain_wallet
APP_VERSION=1.0.0

# ==================================
# API 配置
# ==================================
API_PREFIX=api
API_VERSION=v1
API_DOMAIN=http://localhost:3000

# ==================================
# Swagger 配置
# ==================================
SWAGGER_ENABLE=true

# ==================================
# 数据库配置 (MySQL)
# ==================================
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=
DATABASE_NAME=chain_wallet
DATABASE_CONNECTION_LIMIT=10
DATABASE_TIMEZONE=+08:00
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=3000

# ==================================
# Redis 配置
# ==================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================================
# JWT 配置
# ==================================
JWT_SECRET=your-super-secret-jwt-key-here-please-change-in-production
JWT_EXPIRES_IN=7d

# ==================================
# 日志配置
# ==================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==================================
# CORS 配置
# ==================================
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# ==================================
# 限流配置
# ==================================
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ==================================
# Vault 配置（可选 - 用于安全密钥管理）
# ==================================
# VAULT_ENABLED=false
# VAULT_HOST=localhost
# VAULT_PORT=8200
# VAULT_TOKEN=your-vault-token

# ==================================
# 钱包配置
# ==================================
# WALLET_ENCRYPTION_KEY=your-wallet-encryption-key